<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PL"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="classicBtn">
            <Setter Property="Height" Value="96"/>
            <Setter Property="Width" Value="316"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Background" Value="#FFBBFFFA"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="#FFE6817C"/>
            <Setter Property="Margin" Value="53,42,0,0"/>
            <Setter Property="FontFamily" Value="UniwerekLight"/>
            <Setter Property="FontWeight" Value="UltraBold"/>
            <Setter Property="BorderBrush" Value="#FFE6817C"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Application.Resources>
</Application>
